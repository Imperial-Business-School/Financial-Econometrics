{
  "image": "rocker/binder:4.4",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "languageserver,MASS,ISLR2,car,quantmod,lubridate,zoo,data.table,glue,ggplot2,broom,slider,boot,leaps,pls,glmnet,pacman,dynlm,readxl,urca,xts,PerformanceAnalytics,dtplyr,moments,evir,plotly"
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:latest": {
      "installTinyTex": "true"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "markdown.preview.security.level": "allow-insecure-local-content",
        "extensions.ignoreRecommendations": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.postCommitCommand": "sync",
        "git.autofetch": true,
        "githubPullRequests.createOnPublishBranch": "never",
        "git.useEditorAsCommitInput": false,
        "git.rebaseWhenSync": true,
        "terminal.integrated.ignoreProcessKeybindingWarnings": true,
        "files.exclude": {
          ".devcontainer.json": true
        }
      },
      "extensions": [
        "reditorsupport.r",
        "ms-toolsai.jupyter",
        "jaydesl.vscode-r-arrow",
        "mathematic.vscode-pdf"
      ]
    }
  }
}
